<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.BRJavaProject.ui.controllers.AddCandidateController" stylesheets="/css/style.css">
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Project:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="projectComboBox" promptText="Select Project" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Add Candidate" onAction="#handleAddCandidate" styleClass="button" />
            <Button text="Clear" onAction="#handleClear" styleClass="button" />
        </HBox>
    </bottom>
</BorderPane>
