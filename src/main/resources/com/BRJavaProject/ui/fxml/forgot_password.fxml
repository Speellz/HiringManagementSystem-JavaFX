<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.BRJavaProject.ui.controllers.ForgotPasswordController" spacing="10" style="-fx-padding: 20;" stylesheets="/css/style.css">
    <Label text="Forgot Password" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="emailField" promptText="Email Address" />
    <TextField fx:id="otpField" promptText="Enter OTP" />
    <PasswordField fx:id="newPasswordField" promptText="New Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
    <HBox spacing="10">
        <Button text="Send OTP" onAction="#handleSendOTP" style="-fx-background-color: linear-gradient(to right, #4caf50, #81c784); -fx-text-fill: white;" />
        <Button text="Reset Password" onAction="#handleResetPassword" style="-fx-background-color: linear-gradient(to right, #ff9800, #ffc107); -fx-text-fill: white;" />
    </HBox>
</VBox>
