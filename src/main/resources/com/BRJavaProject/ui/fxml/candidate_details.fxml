<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.BRJavaProject.ui.controllers.CandidateDetailsController" stylesheets="/css/style.css">
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Project:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="projectComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Current Company:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <TextField fx:id="currentCompanyField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="statusField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Status Explanation:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextField fx:id="statusExplanationField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <Label text="Notes:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <TextArea fx:id="notesArea" GridPane.rowIndex="6" GridPane.columnIndex="1" prefRowCount="4" />
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
            <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #FF5252; -fx-text-fill: white;" />
            <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #BDBDBD; -fx-text-fill: black;" />
        </HBox>
    </bottom>
</BorderPane>
